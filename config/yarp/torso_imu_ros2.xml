<robot name="ergoCubSN000" xmlns:xi="http://www.w3.org/2001/XInclude">
<devices>
    <device xmlns:xi="http://www.w3.org/2001/XInclude" name="torso_imu_recev" type="multipleanalogsensorsclient">
        <param name="period"> 0.010 </param>
        <param name="local">   /head_imu_client:i </param>
        <param name="remote">  /ergocub/torso/inertials/measures:o  </param>
        <!--<param name="carrier">  fast_tcp+send.portmonitor+file.bottle_compression_zlib+recv.portmonitor+file.bottle_compression_zlib+type.dll  </param>-->

        <action phase="shutdown" level="5" type="detach" />
    </device>

    <device xmlns:xi="http://www.w3.org/2001/XInclude" name="torso_imu_sender" type="Imu_nws_ros2">
        <param name="period"> 0.01 </param>
    
        <action phase="startup" level="6" type="attach">
           <paramlist name="networks">
              <elem name="the_device"> torso_imu_recev </elem>
           </paramlist>
        </action>
     
        <param name ="node_name"> filtered_torso_imu_local </param>
        <param name ="topic_name"> /torso_imu_filtered</param>
        <param name ="sensor_name"> torso_imu </param>
        <param name ="frame_id"> torso_imu_0 </param>
     
        <action phase="shutdown" level="5" type="detach" />
    </device>
</devices>
</robot>